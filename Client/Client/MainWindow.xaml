<Window x:Class="Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client"
        mc:Ignorable="d"
        Title="Login Page" Height="367.2" Width="392">
    <Grid>
        <TextBox x:Name="usernameBox" HorizontalAlignment="Left" Height="31" Margin="69,128,0,0" TextWrapping="Wrap" Text="Username" VerticalAlignment="Top" Width="238" HorizontalContentAlignment="Center" FontSize="20" PreviewMouseLeftButtonDown="ClearUsername"/>
        <PasswordBox x:Name="passwordBox" HorizontalAlignment="Left" Height="31" Margin="69,181,0,0" VerticalAlignment="Top" Width="238" Password="Password" HorizontalContentAlignment="Center" FontSize="20" PreviewMouseLeftButtonDown="ClearPassword"/>
        <Button Content="Login" HorizontalAlignment="Left" Height="29" Margin="132,235,0,0" VerticalAlignment="Top" Width="112" FontSize="15" Click="Login"/>
        <Button Content="New User?" HorizontalAlignment="Left" Height="34" Margin="261,294,0,0" VerticalAlignment="Top" Width="115" Click="UserForm"/>
        <TextBlock HorizontalAlignment="Left" Margin="69,76,0,0" TextWrapping="Wrap" Text="127.0.0.1" VerticalAlignment="Top" Height="34" Width="238" FontSize="20" TextAlignment="Center"/>
    </Grid>
</Window>
